@comment{This file focuses on legal types, shorthands, per-entry options, and data inheritance.}

% == JURISDICTION: For court cases or legal rulings. ==
% Note the double braces around the author to treat it as a single entity.
@jurisdiction{marbury-v-madison,
  author    = {{Supreme Court of the United States}},
  title     = {Marbury v. Madison},
  volume    = {5},
  journal   = {U.S.},
  pages     = {137},
  year      = {1803},
  note      = {Established the principle of judicial review.}
}

% == REPORT: A report by an organization with a shorthand. ==
% The 'shorthand' field provides a special citation label.
@report{unesco:education2030,
  author       = {{United Nations Educational, Scientific and Cultural Organization}},
  shorthand    = {UNESCO},
  title        = {Education 2030: Incheon Declaration and Framework for Action},
  year         = {2015},
  institution  = {UNESCO},
  url          = {https://unesdoc.unesco.org/ark:/48223/pf0000245656},
  urldate      = {2024-03-01},
}

% == XDATA & ARTICLE: Using XDATA for granular inheritance ==
% A data container for a list of authors
@xdata{lab-members,
  author = {Smith, Alan and Miller, Beatrice}
}

% This article's author list is constructed from one new author and the
% first author ('-1') from the 'lab-members' list.
@article{jones:study,
  author = {Jones, Priya and xdata=lab-members-author-1},
  title = {A Collaborative Study on Quantum States},
  journaltitle = {Journal of Obscure Physics},
  year = {2023}
}

% == UNPUBLISHED: Citing a talk or manuscript. ==
@unpublished{speaker:lecture,
  author       = {Speaker, Eloise},
  title        = {The Role of Archives in the Digital Age},
  eventtitle   = {Keynote speech at the Annual Librarians' Summit},
  venue        = {Alexandria},
  eventdate    = {2022-06-10},
  howpublished = {Unpublished manuscript},
  note         = {The author provided a transcript of the talk.}
}

% == BOOK: Overriding global citation rules with the 'options' field ==
% In this entry, the citation style would be forced to use the translator's name.
@book{calvino:invisible,
  author       = {Calvino, Italo},
  translator   = {Weaver, William},
  title        = {Invisible Cities},
  year         = {1974},
  publisher    = {Harcourt Brace Jovanovich},
  location     = {New York},
  options      = {useauthor=false, usetranslator=true}
}